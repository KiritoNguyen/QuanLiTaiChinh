<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.project.MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="THÊM KHOẢN THU"
        android:textAlignment="textStart"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Tên khoản thu:"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_editor_absoluteX="33dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Mua sắm"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:layout_editor_absoluteX="41dp"
        android:id="@+id/tv"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/tv"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số tiền:"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="33dp"
        android:layout_marginTop="54dp"
        app:layout_constraintTop_toBottomOf="@+id/tv"
        android:id="@+id/textView4" />

    <EditText
        android:layout_width="147dp"
        android:layout_height="49dp"
        android:id="@+id/edtmoney"
        app:layout_constraintLeft_toRightOf="@+id/textView4"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        tools:layout_editor_absoluteY="142dp" />

    <TextView
        android:layout_width="82dp"
        android:layout_height="28dp"
        android:text="Ngày thu"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="33dp"
        android:layout_marginTop="68dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:id="@+id/textView5" />

    <TextView
        android:id="@+id/txtcalendar"
        android:layout_width="123dp"
        android:layout_height="46dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="56dp"
        android:text="  "
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/edtmoney" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btncalendar"
        android:text="Date"
        app:layout_constraintLeft_toRightOf="@+id/txtcalendar"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="47dp"
        app:layout_constraintTop_toBottomOf="@+id/edtmoney" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm khoản thu"
        android:id="@+id/btnaddthu"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/btncalendar"
        android:layout_marginLeft="89dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHOW"
        android:id="@+id/btnshowthu"
        android:layout_marginTop="55dp"
        app:layout_constraintTop_toBottomOf="@+id/btnaddthu"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView5" />

    <TextView
        android:id="@+id/txtshow"
        android:layout_width="191dp"
        android:layout_height="88dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="45dp"
        android:scrollbars = "vertical"
        android:maxLines = "3"
        android:text=""
        app:layout_constraintLeft_toRightOf="@+id/btnshowthu"
        app:layout_constraintTop_toBottomOf="@+id/btnaddthu" />

</android.support.constraint.ConstraintLayout>
