<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.project.customThongKe">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="353dp"
        android:layout_height="277dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.314">

        <RadioButton
            android:id="@+id/btntkkhoanthu"
            android:layout_width="364dp"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:text="Thống kê Khoản Thu"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="25dp"
            tools:layout_editor_absoluteY="293dp" />

        <RadioButton
            android:id="@+id/btntkkhoanchi"
            android:layout_width="match_parent"
            android:layout_height="13dp"
            android:layout_weight="1"
            android:text="Thống kê Khoản Chi"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="25dp"
            tools:layout_editor_absoluteY="407dp" />

        <RadioButton
            android:id="@+id/btntkkhoanvay"
            android:layout_width="385dp"
            android:layout_height="6dp"
            android:layout_weight="1"
            android:text="Thông kê Khoản Vay"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="25dp"
            tools:layout_editor_absoluteY="239dp" />

        <RadioButton
            android:id="@+id/btntkkhoanno"
            android:layout_width="381dp"
            android:layout_height="3dp"
            android:layout_weight="1"
            android:text="Thống Kê Khoản nợ"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="25dp"
            tools:layout_editor_absoluteY="352dp" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView"
        android:layout_width="319dp"
        android:layout_height="58dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="52dp"
        android:text="BIỂU ĐỒ THỐNG KÊ"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
