<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteY="81dp"
    android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvcustom"
        android:layout_width="90dp"
        android:layout_height="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="36dp"
        android:text="Giai tri"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinnercustom"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toEndOf="@+id/tvcustom"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/edtmoneycustom"
        android:layout_width="147dp"
        android:layout_height="52dp"
        android:layout_marginBottom="96dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:hint="MONEY"
        app:layout_constraintBottom_toTopOf="@+id/btncancelcustom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.319"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/edt_ghichuchicustom"
        android:layout_width="147dp"
        android:layout_height="49dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="84dp"
        android:hint="NOTE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtcalendarcustom"
        android:layout_width="123dp"
        android:layout_height="46dp"
        android:layout_alignBottom="@+id/btncalendarcustom"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@+id/btncalendarcustom"
        android:layout_toStartOf="@+id/btncalendarcustom"
        android:text="  "
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btncancelcustom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.995" />

    <Button
        android:id="@+id/btncalendarcustom"
        android:layout_width="97dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btncancel"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/edtmoneycustom"
        android:layout_toRightOf="@+id/edtmoneycustom"
        android:drawableLeft="@drawable/date"
        android:text="Date"
        app:layout_constraintBottom_toTopOf="@+id/btnupdatecustom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtcalendarcustom"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.951" />

    <Button
        android:id="@+id/btncancelcustom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btndelete"
        android:layout_alignBottom="@+id/btndelete"
        android:layout_marginStart="24dp"
        android:layout_marginTop="292dp"
        android:layout_toEndOf="@+id/btndelete"
        android:layout_toRightOf="@+id/btndelete"
        android:text="Cancel"
        app:layout_constraintStart_toEndOf="@+id/btndeletecustom"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btndeletecustom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnupdate"
        android:layout_alignBottom="@+id/btnupdate"
        android:layout_marginStart="12dp"
        android:layout_marginTop="292dp"
        android:layout_toEndOf="@+id/btnupdate"
        android:layout_toRightOf="@+id/btnupdate"
        android:text="Delete"
        app:layout_constraintStart_toEndOf="@+id/btncancel"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnupdatecustom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tvcustom"
        android:layout_alignRight="@+id/tvcustom"
        android:layout_below="@+id/edtmoneycustom"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="292dp"
        android:text="Update"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btncancelcustom"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>