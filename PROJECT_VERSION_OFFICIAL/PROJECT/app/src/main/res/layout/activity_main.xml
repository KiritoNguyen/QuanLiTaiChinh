    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgound1"
    tools:context="com.example.asus.project.MainActivity">


    <Button
        android:id="@+id/btntkc"
        android:layout_width="366dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:drawableLeft="@drawable/themkhoanchi"
        android:shadowColor="#d25811"
        android:text="Thêm Khoản Chi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btntkt" />

    <Button
        android:id="@+id/btntkt"
        android:layout_width="366dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="248dp"
        android:shadowColor="#82A82A"
        android:text="Thêm Khoản Thu"
        android:drawableLeft="@drawable/themkhoanthu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btntkn"
        android:layout_width="366dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Thêm Khoản Nợ"
        android:shadowColor="#82A82A"
        android:drawableLeft="@drawable/themkhoanno"
        app:layout_constraintEnd_toEndOf="parent"
